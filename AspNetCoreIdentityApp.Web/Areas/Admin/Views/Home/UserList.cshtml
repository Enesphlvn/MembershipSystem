@{
    ViewData["Title"] = "UserList";
}

@model List<AdminModel.UserViewModel>

<h2 class="text-center mb-3">Üye Liste</h2>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

