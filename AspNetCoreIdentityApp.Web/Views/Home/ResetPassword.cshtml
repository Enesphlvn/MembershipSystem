
@{
    ViewData["Title"] = "ResetPassword";
}

@model ResetPasswordViewModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2 class="text-center mb-3">Yeni Şifre Oluşturma</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
            @TempData["SuccessMessage"]
        </div>

        <form method="post">
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="mb-3">
                <label for="PasswordConfirm" class="form-label" asp-for="PasswordConfirm"></label>
                <input asp-for="PasswordConfirm" class="form-control">
                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">Şifre Yenile</button>

            </div>
        </form>
    </div>
</div>

