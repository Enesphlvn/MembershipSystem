@{
    ViewData["Title"] = "ResetPassword";
}

@model ForgetPasswordViewModel

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row">
    <div class="col-md-4 offset-md-4">

        <div class="alert alert-info text-center mb-4">Şifre yenileme linki, e-posta adresinize gönderilecektir.</div>


        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
            @TempData["SuccessMessage"]
        </div>

        <form method="post">
            <div class="row">
                <div class="col-md-2 move-down">
                    <label for="Email" class="form-label" asp-for="Email"></label>
                </div>
                <div class="col-md-10 mb-3">
                    <input class="form-control" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class=" text-end">
                <button type="submit" class="btn btn-primary">Gönder</button>
            </div>

        </form>
    </div>
</div>