@{
    ViewData["Title"] = "SignUp";
}
@model SignUpViewModel

<div class="row">
    <div class="col-md-12">
        <h2 class="text-center mb-3">Kullanıcı Kayıt Formu</h2>
        <form asp-controller="Home" asp-action="SignUp" method="post">
            <div class="row mb-3">
                <label for="UserName" class="col-md-4 col-form-label text-md-end" asp-for="UserName"></label>
                <div class="col-md-4">
                    <input asp-for="UserName" class="form-control">
                </div>
            </div>

            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label text-md-end" asp-for="Email"></label>
                <div class="col-md-4">
                    <input asp-for="Email" class="form-control">
                </div>
            </div>

            <div class="row mb-3">
                <label for="Phone" class="col-md-4 col-form-label text-md-end" asp-for="Phone"></label>
                <div class="col-md-4">
                    <input asp-for="Phone" class="form-control">
                </div>
            </div>

            <div class="row mb-3">
                <label for="Password" class="col-md-4 col-form-label text-md-end" asp-for="Password"></label>
                <div class="col-md-4">
                    <input asp-for="Password" class="form-control">
                </div>
            </div>

            <div class="row mb-3">
                <label for="PasswordConfirm" class="col-md-4 col-form-label text-md-end" asp-for="PasswordConfirm"></label>
                <div class="col-md-4">
                    <input asp-for="PasswordConfirm" class="form-control">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8 text-end">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </div>
            </div>
        </form>
    </div>
</div>




