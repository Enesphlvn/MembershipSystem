@{
    ViewData["Title"] = "PasswordChange";
}

@model PasswordChangeViewModel

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2 class="text-center mb-3">Şifre Yenileme</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
            @TempData["SuccessMessage"]
        </div>

        <form asp-controller="Home" asp-action="PasswordChange" method="post">
            <div class="mb-3">
                <label for="PasswordOld" class="form-label" asp-for="PasswordOld"></label>
                <input asp-for="PasswordOld" class="form-control">
                <span class="text-danger" asp-validation-for="PasswordOld"></span>
            </div>

            <div class="mb-3">
                <label for="PasswordNew" class="form-label" asp-for="PasswordNew"></label>
                <input asp-for="PasswordNew" class="form-control">
                <span class="text-danger" asp-validation-for="PasswordNew"></span>
            </div>

            <div class="mb-3">
                <label for="PasswordNewConfirm" class="form-label" asp-for="PasswordNewConfirm"></label>
                <input asp-for="PasswordNewConfirm" class="form-control">
                <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">Şifre değiştir</button>
            </div>
        </form>
    </div>
</div>